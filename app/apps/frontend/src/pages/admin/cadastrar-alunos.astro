        <script>
            import { authStore } from "../../stores/auth";
            import { apiFetch } from "../../lib/api";

            // Check authentication
            document.addEventListener("DOMContentLoaded", async () => {
                const isAuthenticated = await authStore.checkAuth();

                if (!isAuthenticated) {
                    window.location.href = "/login";
                    return;
                }

                // Check if user is admin
                const user = authStore.getUser();
                if (!user || user.tipo !== "admin") {
                    alert(
                        "Acesso negado. Apenas administradores podem cadastrar alunos.",
                    );
                    window.location.href = "/login";
                    return;
                }
            });

            // CPF mask
            function applyCpfMask(input) {
                input.addEventListener("input", (e) => {
                    let value = e.target.value.replace(/\D/g, "");
                    if (value.length > 11) value = value.slice(0, 11);
                    value = value.replace(/(\d{3})(\d)/, "$1.$2");
                    value = value.replace(/(\d{3})(\d)/, "$1.$2");
                    value = value.replace(/(\d{3})(\d{1,2})$/, "$1-$2");
                    e.target.value = value;
                });
            }

            // Phone mask
            function applyPhoneMask(input) {
                input.addEventListener("input", (e) => {
                    let value = e.target.value.replace(/\D/g, "");
                    if (value.length > 11) value = value.slice(0, 11);
                    if (value.length > 2) {
                        value = "(" + value.slice(0, 2) + ") " + value.slice(2);
                    }
                    if (value.length > 10) {
                        value = value.slice(0, 10) + "-" + value.slice(10);
                    }
                    e.target.value = value;
                });
            }

            // Apply masks to existing inputs
            document
                .querySelectorAll('input[name="cpf"], .cpf-input')
                .forEach(applyCpfMask);
            document
                .querySelectorAll(".telefone-input")
                .forEach(applyPhoneMask);

            // Toggle neurodivergente observations
            document
                .getElementById("neurodivergente")
                .addEventListener("change", (e) => {
                    document.getElementById("observacoes-neuro").style.display =
                        e.target.checked ? "block" : "none";
                });

            // Add respons√°vel
            let responsavelCount = 1;
            document
                .getElementById("btn-add-responsavel")
                .addEventListener("click", () => {
                    if (responsavelCount >= 3) {
                        alert("M√°ximo de 3 respons√°veis permitido.");
                        return;
                    }

                    const container = document.getElementById(
                        "responsaveis-container",
                    );
                    const newSection = document.createElement("div");
                    newSection.className = "responsavel-section";
                    newSection.dataset.index = responsavelCount;
                    newSection.innerHTML = `
                <div class="responsavel-header">
                    <h3>Respons√°vel ${responsavelCount + 1}</h3>
                    <div style="display: flex; gap: 0.5rem; align-items: center;">
                        <button type="button" class="btn-search-responsavel" data-index="${responsavelCount}">
                            üîç Buscar usu√°rio existente
                        </button>
                        <button type="button" class="btn-remove-responsavel">Remover</button>
                    </div>
                </div>
                <div id="selected-user-${responsavelCount}" class="selected-user-badge" style="display: none;">
                    <span class="selected-user-name"></span>
                    <button type="button" class="btn-clear" title="Remover sele√ß√£o">&times;</button>
                </div>
                <input type="hidden" name="responsavel_id_${responsavelCount}" />
                <div class="form-grid">
                    <div class="form-group">
                        <label>Nome Completo</label>
                        <input type="text" name="responsavel_nome_${responsavelCount}" placeholder="Nome do respons√°vel">
                    </div>
                    <div class="form-group">
                        <label>CPF</label>
                        <input type="text" name="responsavel_cpf_${responsavelCount}" placeholder="000.000.000-00" maxlength="14" class="cpf-input">
                    </div>
                    <div class="form-group">
                        <label>Parentesco</label>
                        <select name="responsavel_parentesco_${responsavelCount}">
                            <option value="">Selecione</option>
                            <option value="pai">Pai</option>
                            <option value="mae">M√£e</option>
                            <option value="avo">Av√¥/Av√≥</option>
                            <option value="tio">Tio/Tia</option>
                            <option value="outro">Outro</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Telefone</label>
                        <input type="tel" name="responsavel_telefone_${responsavelCount}" placeholder="(00) 00000-0000" class="telefone-input">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="responsavel_email_${responsavelCount}" placeholder="email@exemplo.com">
                    </div>
                </div>
            `;

                    container.appendChild(newSection);

                    // Apply masks to new inputs
                    newSection
                        .querySelectorAll(".cpf-input")
                        .forEach(applyCpfMask);
                    newSection
                        .querySelectorAll(".telefone-input")
                        .forEach(applyPhoneMask);

                    // Remove respons√°vel handler
                    newSection
                        .querySelector(".btn-remove-responsavel")
                        .addEventListener("click", () => {
                            newSection.remove();
                            responsavelCount--;
                        });

                    responsavelCount++;
                });

            // Form submit
            document
                .getElementById("cadastro-form")
                .addEventListener("submit", async (e) => {
                    e.preventDefault();

                    const form = e.target;
                    const submitBtn = document.getElementById("btn-submit");
                    const alertSuccess =
                        document.getElementById("alert-success");
                    const alertError = document.getElementById("alert-error");

                    alertSuccess.style.display = "none";
                    alertError.style.display = "none";
                    submitBtn.disabled = true;
                    submitBtn.textContent = "Cadastrando...";

                    const formData = new FormData(form);

                    // Build aluno data
                    const alunoData = {
                        nome: formData.get("nome"),
                        data_nascimento: formData.get("data_nascimento"),
                        cpf: formData.get("cpf")?.replace(/\D/g, ""),
                        sexo: formData.get("sexo"),
                        escola: formData.get("escola"),
                        serie: formData.get("serie"),
                        unidade: formData.get("unidade"),
                        turma_id: formData.get("turma") || null,
                        tipo_sanguineo: formData.get("tipo_sanguineo") || null,
                        alergias: formData.get("alergias") || null,
                        condicoes_medicas:
                            formData.get("condicoes_medicas") || null,
                        neurodivergente:
                            formData.get("neurodivergente") === "on",
                        observacoes_neuro:
                            formData.get("observacoes_neuro") || null,
                        responsaveis: [],
                    };

                    // Collect respons√°veis
                    for (let i = 0; i < responsavelCount; i++) {
                        const nome = formData.get(`responsavel_nome_${i}`);
                        if (nome) {
                            alunoData.responsaveis.push({
                                id: formData.get(`responsavel_id_${i}`) || null,
                                nome: nome,
                                cpf: formData
                                    .get(`responsavel_cpf_${i}`)
                                    ?.replace(/\D/g, ""),
                                parentesco: formData.get(
                                    `responsavel_parentesco_${i}`,
                                ),
                                telefone: formData
                                    .get(`responsavel_telefone_${i}`)
                                    ?.replace(/\D/g, ""),
                                email:
                                    formData.get(`responsavel_email_${i}`) ||
                                    null,
                            });
                        }
                    }

                    try {
                        const response = await apiFetch("/alunos", {
                            method: "POST",
                            body: JSON.stringify(alunoData),
                        });

                        if (response.success) {
                            alertSuccess.style.display = "block";
                            form.reset();
                            window.scrollTo({ top: 0, behavior: "smooth" });

                            setTimeout(() => {
                                window.location.href =
                                    "/admin/gerenciar-alunos";
                            }, 2000);
                        } else {
                            alertError.textContent =
                                response.error || "Erro ao cadastrar aluno";
                            alertError.style.display = "block";
                            window.scrollTo({ top: 0, behavior: "smooth" });
                        }
                    } catch (error) {
                        console.error("Erro:", error);
                        alertError.textContent =
                            "Erro de conex√£o com o servidor";
                        alertError.style.display = "block";
                        window.scrollTo({ top: 0, behavior: "smooth" });
                    } finally {
                        submitBtn.disabled = false;
                        submitBtn.textContent = "Cadastrar Aluno";
                    }
                });

            // =====================================================
            // Search Dialog for Respons√°vel
            // =====================================================
            
            let currentSearchIndex = 0;
            let allUsers = [];
            let searchTimeout = null;
            
            const searchDialogOverlay = document.getElementById('search-dialog-overlay');
            const searchInput = document.getElementById('search-user-input');
            const searchResults = document.getElementById('search-results');
            const btnCloseDialog = document.getElementById('btn-close-dialog');
            
            // Load users from API
            async function loadUsers() {
                try {
                    const response = await apiFetch('/usuarios/todos-com-roles');
                    console.log('Users API response:', response);
                    if (response.success && response.data) {
                        // The API returns { success: true, data: { success: true, data: [...], total: n } }
                        // apiFetch wraps the backend response in its own { success, data } structure
                        const backendData = response.data;
                        if (backendData.data && Array.isArray(backendData.data)) {
                            allUsers = backendData.data;
                        } else if (Array.isArray(backendData)) {
                            allUsers = backendData;
                        } else {
                            console.warn('Unexpected users data format:', backendData);
                            allUsers = [];
                        }
                    }
                    console.log('Loaded users:', allUsers);
                } catch (error) {
                    console.error('Erro ao carregar usu√°rios:', error);
                }
            }
            
            // Load users on page load
            loadUsers();
            
            // Open search dialog
            function openSearchDialog(index) {
                currentSearchIndex = index;
                searchDialogOverlay.classList.add('active');
                searchInput.value = '';
                searchInput.focus();
                renderSearchResults('');
            }
            
            // Close search dialog
            function closeSearchDialog() {
                searchDialogOverlay.classList.remove('active');
                searchInput.value = '';
            }
            
            // Render search results
            function renderSearchResults(query) {
                const normalizedQuery = query.toLowerCase().trim();
                
                if (!normalizedQuery) {
                    searchResults.innerHTML = '<div class="search-empty">Digite para buscar usu√°rios cadastrados</div>';
                    return;
                }
                
                const filtered = allUsers.filter(user => {
                    const nome = (user.nome || '').toLowerCase();
                    const email = (user.email || '').toLowerCase();
                    return nome.includes(normalizedQuery) || email.includes(normalizedQuery);
                });
                
                if (filtered.length === 0) {
                    searchResults.innerHTML = '<div class="search-empty">Nenhum usu√°rio encontrado</div>';
                    return;
                }
                
                searchResults.innerHTML = filtered.map(user => `
                    <div class="search-result-item" data-user-id="${user.id}" data-user-name="${user.nome}" data-user-email="${user.email || ''}">
                        <div class="result-info">
                            <div class="result-name">${user.nome}</div>
                            <div class="result-details">${user.email || 'Sem email'}</div>
                        </div>
                        <span class="result-role ${user.role}">${user.role}</span>
                        <button type="button" class="btn-select-user">Selecionar</button>
                    </div>
                `).join('');
                
                // Add click handlers to select buttons
                searchResults.querySelectorAll('.btn-select-user').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const item = e.target.closest('.search-result-item');
                        selectUser(item.dataset.userId, item.dataset.userName, item.dataset.userEmail);
                    });
                });
                
                // Add click handler to entire result item
                searchResults.querySelectorAll('.search-result-item').forEach(item => {
                    item.addEventListener('click', (e) => {
                        if (!e.target.classList.contains('btn-select-user')) {
                            selectUser(item.dataset.userId, item.dataset.userName, item.dataset.userEmail);
                        }
                    });
                });
            }
            
            // Select a user and fill the form
            function selectUser(userId, userName, userEmail) {
                const index = currentSearchIndex;
                
                // Set hidden id field
                const idInput = document.querySelector(`input[name="responsavel_id_${index}"]`);
                if (idInput) idInput.value = userId;
                
                // Fill form fields
                const nomeInput = document.querySelector(`input[name="responsavel_nome_${index}"]`);
                if (nomeInput) nomeInput.value = userName;
                
                const emailInput = document.querySelector(`input[name="responsavel_email_${index}"]`);
                if (emailInput) emailInput.value = userEmail || '';
                
                // Show selected user badge
                const badge = document.getElementById(`selected-user-${index}`);
                if (badge) {
                    badge.style.display = 'inline-flex';
                    badge.querySelector('.selected-user-name').textContent = `Usu√°rio selecionado: ${userName}`;
                }
                
                closeSearchDialog();
            }
            
            // Clear selected user
            function clearSelectedUser(index) {
                const badge = document.getElementById(`selected-user-${index}`);
                if (badge) {
                    badge.style.display = 'none';
                }
                
                const idInput = document.querySelector(`input[name="responsavel_id_${index}"]`);
                if (idInput) idInput.value = '';
            }
            
            // Event listeners for search dialog
            btnCloseDialog.addEventListener('click', closeSearchDialog);
            
            searchDialogOverlay.addEventListener('click', (e) => {
                if (e.target === searchDialogOverlay) {
                    closeSearchDialog();
                }
            });
            
            // Debounced search input
            searchInput.addEventListener('input', (e) => {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    renderSearchResults(e.target.value);
                }, 200);
            });
            
            // Handle ESC key to close dialog
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && searchDialogOverlay.classList.contains('active')) {
                    closeSearchDialog();
                }
            });
            
            // Event delegation for search buttons
            document.addEventListener('click', (e) => {
                // Search button click
                if (e.target.classList.contains('btn-search-responsavel')) {
                    const index = parseInt(e.target.dataset.index, 10);
                    openSearchDialog(index);
                }
                
                // Clear badge button click
                if (e.target.classList.contains('btn-clear') && e.target.closest('.selected-user-badge')) {
                    const badge = e.target.closest('.selected-user-badge');
                    const index = badge.id.replace('selected-user-', '');
                    clearSelectedUser(index);
                }
            });
        </script>
    </body>
</html>
