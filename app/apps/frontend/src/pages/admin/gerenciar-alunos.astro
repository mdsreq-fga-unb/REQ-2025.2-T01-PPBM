            alert(`Editar aluno com ID: ${id}`);
            // Exemplo: window.location.href = `/alunos/editar/${id}`;
        };

        window.removerAluno = function(id) {
            if (confirm('Tem certeza que deseja remover este aluno?')) {
                // Aqui voc√™ far√° a chamada √† API para remover o aluno
