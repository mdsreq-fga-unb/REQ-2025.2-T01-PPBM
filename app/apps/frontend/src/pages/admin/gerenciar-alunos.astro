                // await fetch(`${backendUrl}/alunos/${id}`, { method: 'DELETE' });
                
                // Por enquanto, apenas remove da lista local
                alunosExemplo.splice(alunosExemplo.findIndex(a => a.id === id), 1);
                filtrarAlunos();
                alert('Aluno removido com sucesso!');
            }
        };

        // Carregar dados iniciais
        renderizarTabela(alunosFiltrados);

        // Carregar dados da API quando dispon√≠vel
