const currentPath = Astro.url.pathname;

const isActive = (path: string) => {
    if (path === '/admin/presencas') {
        return currentPath === '/admin/presencas';
    }
    if (path === '/alunos/cadastrar') {
        return currentPath === '/alunos/cadastrar';
    }
    if (path === '/admin/gerenciar-alunos') {
        return currentPath === '/admin/gerenciar-alunos';
    }
    if (path === '/admin/relatorios') {
        return currentPath === '/admin/relatorios';
    }
    if (path === '/admin/dashboard') {
        return currentPath === '/admin/dashboard';
    }
    return currentPath.startsWith(path);
};
